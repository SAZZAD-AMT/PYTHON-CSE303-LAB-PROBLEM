					"platform": {
						"type": "string",
						"description": "用于 -A 参数的 CMake 平台"
					},
					"toolset": {
						"type": "string",
						"description": "用于 -T 参数的 CMake 工具集"
					}
				},
				"required": [
					"name"
				]
			}
		}
